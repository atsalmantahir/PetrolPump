@model PetrolPump.Models.tbl_Sensor
@{
    ViewBag.Title = "Index";
    PetrolPump.Models.AppSession session = (PetrolPump.Models.AppSession)HttpContext.Current.Session["AppSession"];
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Edit Fuel Tank</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "PetrolPumps")">Petrol Pumps</a></li>
                        <li class="breadcrumb-item active">Edit Fuel Tank</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                Edit Fuel Tank
                            </h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <div class="col-md-12">
                                <!-- general form elements -->
                                <div class="card card-info">
                                    <div class="card-header">
                                        <h3 class="card-title">Edit Fuel Tank</h3>
                                    </div>

                                    @using (Html.BeginForm("AddFuelTank", "PetrolPumps", new { @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(x => x.SensorID)
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @*<form class="form-horizontal">*@
                                        <div class="card-body">
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-sm-2 col-form-label">Pump</label>
                                                <div class="col-md-6">

                                                    @Html.DropDownListFor(x => x.PumpID, new
                                                   SelectList(ViewBag.Pumps, "PumpID", "Location"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.PumpID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-sm-2 col-form-label">Fuel Type</label>
                                                <div class="col-md-6">

                                                    @Html.DropDownListFor(x => x.FuelTypeID, new
                                                   SelectList(ViewBag.FuelTypes, "FuelTypeID", "FuelType"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.FuelTypeID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-sm-2 col-form-label">Sensor IP</label>
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(x => x.SensorMAC, new { @class = "form-control", @placeholder = "Sensor MAC", @readonly = "readonly" })
                                                </div>
                                            </div>
                                            @*<div class="form-group row">
                                                <label for="inputEmail3" class="col-sm-2 col-form-label">Tank Title</label>
                                                <div class="col-md-6">

                                                    @Html.TextBoxFor(x => x.TankTitle, new { @class = "form-control", @placeholder = "Tank Title" })
                                                </div>
                                            </div>*@
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-sm-2 col-form-label">Tank Capacity</label>
                                                <div class="col-md-6">

                                                    @Html.TextBoxFor(x => x.TankCapacity, new { @class = "form-control", @placeholder = "Tank Capacity" })

                                                </div>
                                            </div>

                                        </div>
                                        <!-- /.card-body -->
                                        <div class="card-footer">
                                            <span class="float-right">
                                                <button type="submit" class="btn btn-info">Update</button>
                                            </span>
                                        </div>
                                        <!-- /.card-footer -->
                                        @*</form>*@
                                    }
                                </div>
                                <!-- /.card -->
                                <!-- Form Element sizes -->


                            </div>


                        </div>
                    </div>
                </div>


            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
