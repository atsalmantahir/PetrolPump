@model List<PetrolPump.Models.tbl_User>
@{
    ViewBag.Title = "Index";
    PetrolPump.Models.AppSession session;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">User Management</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">User Management</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Users
                            </h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <span class="pull-right">
                                <a href="@Url.Action("Add", "Users")">Add New</a>
                            </span>
                            <table class="table table-bordered jqueryDataTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Role</th>
                                        <th>Pump</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Password</th>
                                        <th>Created Date</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        int count = 1;
                                        foreach (var item in Model)
                                        {
                                            var statusClass = "danger";
                                            var statusText = "Activate";
                                            if (item.IsActive == true) {
                                                statusClass = "success";
                                                statusText = "Deactivate";
                                            }
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.tbl_Role.RoleSubTitle</td>
                                                <td>@item.tbl_Pump.tbl_Company.CompanyName - @item.tbl_Pump.Location</td>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Username</td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Password</td>
                                                <td>@Convert.ToDateTime(item.CreatedAt).ToString("dd-MMM-yyyy")</td>
                                                <td><span class="badge bg-@statusClass">@item.IsActive</span></td>
                                                <td>
                                                <a href="@Url.Action("Edit", "Users", new { id = item.UserID })">Edit</a> | 
                                                <a href="#" onclick="UpdateStatus(@item.UserID)">@statusText</a></td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>



<script>

    function UpdateStatus(id) {
        var r = confirm("Are you sure!");
        if (r == true) {
            $.ajax({  
                type: "GET",  
                url: 'Users/UpdateStatus?ID=' + id,
                success: function () {  
                    // alert("Data has been added successfully.");  
                    location.reload()  
                },   
            });
            location.reload()

        } 
    }
</script>
