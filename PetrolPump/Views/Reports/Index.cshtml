@model List<PetrolPump.Models.tbl_Stock>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Reports</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">Reports</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                Purchase Reports
                            </h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                <a href="@Url.Action("SalaryReport", "Reports")">Salary Report</a>
                                <a href="@Url.Action("ExpenseReport", "Reports")">Expense Report</a>
                                <label>Date range:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control float-right reservation" id="datePurchase">
                                </div>
                                <span class="float-right">
                                    <button id="btnPurchase">Update</button>
                                </span>
                                <!-- /.input group -->
                            </div>
                            <input type="button" id="btnExport1" value="Export Table data into Excel" />

                            <table class="table table-bordered" id="tblPurchaseReport">
                                <thead>
                                    <tr>
                                        <th>Order Date</th>
                                        <th>Order Type</th>
                                        <th>Fuel Type</th>
                                        <th>Supplier Name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>

                            </table>

                            <div id="dvData1" style="display:none !important">
                                <table>
                                    <tr>
                                        <th>Order Date</th>
                                        <th>Order Type</th>
                                        <th>Fuel Type</th>
                                        <th>Customer Name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        int count = 1;
                                        decimal? total = 0;
                                        foreach (var item in Model.Where(x => x.IsPurchased == true))
                                        {
                                            total = item.tbl_Sensor.tbl_FuelType.PurchasePrice * item.Quantity;
                                            <tr>
                                                <td>@Convert.ToDateTime(item.CreatedDate).ToString("dd-MMM-yyyy")</td>
                                                <td>@item.OrderType</td>
                                                <td>@item.tbl_Sensor.tbl_FuelType.FuelType</td>
                                                <td>@item.tbl_Supplier.Title</td>
                                                <td>@item.tbl_Sensor.tbl_FuelType.PurchasePrice</td>
                                                <td>@item.Quantity</td>
                                                <td>@total</td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7">No Record Found</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                Sales Reports
                            </h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                <label>Date range:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control float-right reservation" id="dateSale">
                                </div>
                                <span class="float-right">
                                    <button id="btnSale">Update</button>
                                </span>
                                <!-- /.input group -->
                            </div>

                            <input type="button" id="btnExport2" value="Export Table data into Excel" />
                            <table class="table table-bordered" id="tblSaleReport">
                                <thead>
                                    <tr>
                                        <th>Order Date</th>
                                        <th>Order Type</th>
                                        <th>Fuel Type</th>
                                        <th>Customer</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                           
                        </div>
                        <div id="dvData2" style="display:none !important">
                            <table>
                                <tr>
                                    <th>Order Date</th>
                                    <th>Order Type</th>
                                    <th>Fuel Type</th>
                                    <th>Supplier</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                                @if (Model != null && Model.Count > 0)
                                {
                                    decimal? total = 0;
                                    foreach (var item in Model.Where(x => x.IsSaled == true))
                                    {
                                        total = item.tbl_Sensor.tbl_FuelType.SalePrice * item.Quantity;
                                        <tr>
                                            <td>@Convert.ToDateTime(item.CreatedDate).ToString("dd-MMM-yyyy")</td>
                                            <td>@item.OrderType</td>
                                            <td>@item.tbl_Sensor.tbl_FuelType.FuelType</td>
                                            <td>@item.tbl_Customer.Title</td>
                                            <td>@item.tbl_Sensor.tbl_FuelType.SalePrice</td>
                                            <td>@item.Quantity</td>
                                            <td>@total</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7">No Record Found</td>
                                    </tr>
                                }
                            </table>
                        </div>

                    </div>
                </div>


            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>


    <div class="content"></div>

    <!-- /.content -->
</div>


