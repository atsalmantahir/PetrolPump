@model List<PetrolPump.Models.tbl_EmployeeSalary>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Salary Report</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active"> Salary Report</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                Salary Report
                            </h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <span class="pull-right">

                            </span>
                            <table class="table table-bordered jqueryDataTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>FulName</th>
                                        <th>Email</th>
                                        <th>Designation</th>
                                        <th>Phone</th>
                                        <th>Month</th>
                                        <th>Year</th>

                                        <th>Salary</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    s
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        int count = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.tbl_Employee.FullName</td>
                                                <td>@item.tbl_Employee.Email</td>
                                                <td>@item.tbl_Employee.Designation</td>
                                                <td>@item.tbl_Employee.Phone</td>

                                                <td>@Convert.ToDateTime(item.CreatedDate).Month</td>
                                                <td>@Convert.ToDateTime(item.CreatedDate).Year</td>
                                                <td>@item.tbl_Employee.Salary</td>

                                                <td></td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7">No Record Found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
